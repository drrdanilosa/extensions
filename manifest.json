{
  "manifest_version": 2,
  "name": "DeepAlias Hunter Pro",
  "version": "2.0.0",
  "description": "Extensão OSINT para busca de aliases em múltiplas plataformas",
  
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "*://*/*"
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "DeepAlias Hunter Pro",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
