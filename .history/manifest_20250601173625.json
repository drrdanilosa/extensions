{
  "manifest_version": 2,
  "name": "DeepAlias Hunter Pro",
  "version": "3.0.0",
  "description": "Extensão OSINT avançada para busca de aliases com arquitetura modular",
  
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "*://*/*"
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "DeepAlias Hunter Pro - Busca Profunda",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
    "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    "src/*"
  ]
}
